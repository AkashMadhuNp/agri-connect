rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection rules
    match /users/{userId} {
      // Allow read access to all authenticated users (for chat user list)
      allow read: if request.auth != null;
      
      // Allow write access only to the document owner
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Messages collection rules (for future chat functionality)
    match /messages/{messageId} {
      // Allow read/write access to authenticated users
      allow read, write: if request.auth != null;
    }
    
    // Chat rooms collection rules (for future chat functionality)
    match /chatRooms/{chatRoomId} {
      // Allow read/write access to authenticated users who are participants
      allow read, write: if request.auth != null;
    }
  }
}